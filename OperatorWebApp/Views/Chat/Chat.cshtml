                <!-- Online User List -->
                @Html.Partial("_OnlineUserList")

                <!-- Private Chat -->
                @*@Html.Partial("_PrivateChat")*@
                <input id="hdUserName" type="hidden" />
                <input id="PWCount" type="hidden" value="info" />

            </div>
        </div>
