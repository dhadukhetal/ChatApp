
@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form id="frmChat">
        <input type="hidden" id="hdnOperatorID" name="OperatorID" value="@ViewBag.OperatorId" />
        <input type="hidden" id="hdnDisplayName" name="Operator_UserName" value="@ViewBag.Operator_DisplayName" />
        <input type="hidden" id="hdnChatSessionId" name="Operator_UserName" value="@ViewBag.ChatSessionId" />

        <div class="content-wrapper">
            @*@Html.Partial("_ChatHeader")*@
            <div class="row">
                <!-- Chat BOX -->
                <div class="col-md-9">
                    <div class="row" id="PriChatDiv">
                    </div>
                    <textarea class="form-control" style="visibility: hidden;"></textarea>
                    @*<fieldset>
                        <legend>Log</legend>
                        <textarea id="txtLog" cols="60" rows="15"></textarea>
                    </fieldset>*@
                    @*@Html.Partial("_ChatBox")*@
